{% comment %}

Block Slider:
A simple slider section.

@author Peter Laxalt and Alisha Garric
@since 2/2020
@stylesheet block-slider.scss

{% endcomment %}


<section class="block-slider">
  <div class="block-slider-inner">
    <div class="block-slider-el block-slider-1">

      {% for i in (1..3) %}
          {% assign fieldID = 'slide-' | append: i | append: '-text' %}
          {% assign headline = section.settings[fieldID] %}
          {% assign fieldID = 'slide-' | append: i | append: '-btn-text' %}
          {% assign label = section.settings[fieldID] %}
          {% assign fieldID = 'slide-' | append: i | append: '-url' %}
          {% assign slug = section.settings[fieldID] %}
          {% assign fieldID = 'slide-' | append: i | append: '-img' %}
          {% assign cover = section.settings[fieldID] | img_url:'1000x' %}

          {% include 'block-slider-slide' 
          headline: headline, 
          slug: slug, 
          label: label, 
          cover: cover %}
      {% endfor %}

    </div>
  </div>
</section>


