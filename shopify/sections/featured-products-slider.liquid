{% comment %}

Featured Products Slider:
A slider section containing featured products.

@author Peter Laxalt
@since 2/2020
@stylesheet: featured-products-slider.scss

{% endcomment %}

{% assign products = '' %}
{% for i in (1..100 ) %}
    {% assign product-id = 'product-' | append: i %}
    {% assign productHandle = section.settings[product-id] %}
    {% unless all_products[productHandle] == empty %}
        {% assign products = products | append: ' ' | append: productHandle %}
    {% endunless %}
{% endfor %}

{% include 'featured-products-slider' with featuredProducts: products %}

