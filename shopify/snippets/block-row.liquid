{% comment %}

Block Row Component

@author Peter Laxalt
@since 2/2020
@stylesheet block-row.scss

{% endcomment %}

{% if settings.block-1-url != null and settings.block-1-text != '' and settings.block-2-url != null and settings.block-2-text != '' %}
  <section class="block-row block-row-1">

    <!-- <div class="section-header split">
      <h3>
