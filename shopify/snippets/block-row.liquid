    <div class="block-row-inner">

      <div class="block-item">
        <a href="{{ settings.block-1-url }}">
          <div class="block-item-inner">
            <div class="block-item-cover block-item-cover-solid bg-clr-orange">
              <span class="txt-clr-white">
                {{ settings.block-1-text }}
              </span>
            </div>
          </div>
        </a>
      </div>

      <div class="block-item">
        <a href="{{ settings.block-2-url }}">
          <div class="block-item-inner">
            <div class="block-item-cover bg-clr-tint">
              <span class="txt-clr-white">
                {{ settings.block-2-text }}
              </span>
            </div>
            <div class="block-item-image">
              <img data-src="{{ settings.block-2-img | img_url: '1000x' }}" alt="{{ settings.block-2-text }}" class="lazy" />
            </div>
          </div>
        </a>
      </div>

    </div>
  </section>
{% endif %}

{% if settings.block-3-url != null and settings.block-3-text != '' and settings.block-4-url != null and settings.block-4-text != '' %}
  <section class="block-row">
    <div class="block-row-inner block-row-reverse">

      <div class="block-item">
        <a href="{{ settings.block-4-url }}">
          <div class="block-item-inner">
            <div class="block-item-cover block-item-cover-solid bg-clr-mustard">
              <span class="txt-clr-white">
                {{ settings.block-4-text }}
              </span>
            </div>
          </div>
        </a>
      </div>

      <div class="block-item">
        <a href="{{ settings.block-3-url }}">
          <div class="block-item-inner">
            <div class="block-item-cover bg-clr-tint">
              <span class="txt-clr-white">
                {{ settings.block-3-text }}
              </span>
            </div>
            <div class="block-item-image">
              <img data-src="{{ settings.block-3-img | img_url: '1000x' }}" alt="{{ settings.block-2-text }}" class="lazy" />
            </div>
          </div>
        </a>
      </div>

    </div>
  </section>
{% endif %}